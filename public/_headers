# HTTP Headers for Veridaq Site
# Ensures proper content types for crawlers and security headers

# Sitemap files - Must be served as XML with proper MIME type
/sitemap.xml
  Content-Type: application/xml; charset=utf-8
  Cache-Control: public, max-age=3600, s-maxage=3600
  X-Robots-Tag: all

/sitemap-*.xml
  Content-Type: application/xml; charset=utf-8
  Cache-Control: public, max-age=3600, s-maxage=3600
  X-Robots-Tag: all

# Robots.txt - Plain text for crawlers
/robots.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=86400, s-maxage=86400
  X-Robots-Tag: all

# AI plugin JSON - For AI crawler discovery
/.well-known/ai-plugin.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=3600, s-maxage=3600
  Access-Control-Allow-Origin: *
  X-Robots-Tag: all

# Static blog HTML files - For crawlers only
# Include Link header for sitemap discovery
/blog/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=3600, s-maxage=3600
  X-Robots-Tag: index, follow
  Link: <https://veridaq.com/sitemap.xml>; rel="sitemap"; type="application/xml"

/*/blog/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=3600, s-maxage=3600
  X-Robots-Tag: index, follow
  Link: <https://veridaq.com/sitemap.xml>; rel="sitemap"; type="application/xml"

# Main SPA index.html - Prevent duplicate indexing
/index.html
  X-Robots-Tag: noindex, nofollow

# Security headers for all pages
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
